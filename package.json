{
  "name": "rainaext",
  "displayName": "rainaext",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:raina.open",
    "onView:rainaLauncher",
    "onCommand:raina.notifications.openOutput"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "raina.open",
        "title": "RAINA: Open",
        "category": "Raina",
        "icon": {
          "dark": "media/raina-ui/raina-icon.svg",
          "light": "media/raina-ui/raina-icon.svg"
        }
      },
      {
        "command": "raina.notifications.openOutput",
        "title": "RAINA: Show Notifications Output",
        "category": "Raina"
      }
    ],
    "configuration": {
      "title": "RAINA",
      "properties": {
        "raina.notificationWsUrl": {
          "type": "string",
          "default": "ws://localhost:8016/ws",
          "description": "WebSocket endpoint for the RAINA notification service."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "raina",
          "title": "Raina",
          "icon": "media/raina-ui/raina-icon.svg"
        }
      ]
    },
    "views": {
      "raina": [
        {
          "id": "rainaLauncher",
          "name": "Raina"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "rainaLauncher",
        "contents": "Launch the assistant.\n\n[Open Raina](command:raina.open)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "ui:build": "npm --prefix webview-ui/raina-ui run build",
    "ui:dev": "npm --prefix webview-ui/raina-ui run dev",
    "build": "npm run ui:build && npm run compile",
    "vscode:prepublish": "npm run build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
